<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/magenta_clair"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/photoEleveCell"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/prenomEleveCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Christophe"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/photoEleveCell"
        app:layout_constraintTop_toTopOf="@+id/buttonDevoirRendu" />

    <TextView
        android:id="@+id/nomEleveCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="GuidÃ©"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDevoirRendu"
        app:layout_constraintStart_toEndOf="@+id/photoEleveCell" />

    <Button
        android:id="@+id/buttonDevoirRendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/magenta_fonce"
        android:text="Devoir rendu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>